{
  "version": 2,
  "git": {
    "deploymentEnabled": false
  },
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*\\.(html|css|js|ico|png|jpg|svg))",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ]
}
